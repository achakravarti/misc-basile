# make variables configuring the build
# so to compile with gcc-6 just run: make -f Makefile1 CC=gcc-6

CC=gcc
CFLAGS= -O1 -g -Wall
INDENT= indent
INDENTFLAGS= -gnu
RM= rm -vf
.PHONY: all clean indent

all: helloworld1

helloworld1: helloworld1.c
	$(LINK.c) $< -o $@

clean:
	$(RM) *.o helloworld1

indent:
	$(INDENT) $(INDENTFLAGS) helloworld1.c
